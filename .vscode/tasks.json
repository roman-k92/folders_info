{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ сборка активного файла",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",			
				"-g",
				"${workspaceFolder}/include/*.h",
				"${workspaceFolder}/src/*.cpp",
				"-o",
				"${workspaceFolder}/bin/res",
				"~/projects/boost_1_71_0/built/lib/libboost_filesystem.a"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "компилятор: /usr/bin/g++"
		}
	]
}